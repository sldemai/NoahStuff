<Window x:Class="DrawThing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hi Noah" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="DrawingCanvas" HorizontalAlignment="Left" Height="272" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" RenderTransformOrigin="0.28,1.67" Cursor="Cross">
            <Label Content="Hello, Noah!  Push the button..." Canvas.Left="90" Canvas.Top="125" FontSize="20" FontWeight="Bold" Background="White" Foreground="#FFA25656"/>
        </Canvas>
        <TextBox x:Name="CircleCount" HorizontalAlignment="Left" Height="23" Margin="10,287,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="DrawButton" Content="Draw" HorizontalAlignment="Left" Margin="135,288,0,0" VerticalAlignment="Top" Width="75" Click="DrawButton_Click"/>

    </Grid>
</Window>
